---
import Layout from "./Layout.astro";
const {frontmatter} = Astro.props;
const { title, description, bannerImage }= frontmatter;
---
<Layout title="City hikers">
  <img src={bannerImage}/>
  <h1 class="title is-2">{title}</h1>
  <p>{description}</p>
  <slot /> <!-- Markdown content is injected here -->
</Layout>
